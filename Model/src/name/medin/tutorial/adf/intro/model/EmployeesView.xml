    Name="DepartmentId"
    PrecisionRule="true"
    EntityAttrName="DepartmentId"
    EntityUsage="Employees"
    AliasName="DEPARTMENT_ID"
    LOVName="LOV_DepartmentId">
    <Properties>
      <SchemaBasedProperties>
        <CONTROLTYPE
          Value="choice"/>
      </SchemaBasedProperties>
    </Properties>
  </ViewAttribute>
  <ViewAttribute
    Name="Gravatar"
    IsUpdateable="false"
    IsSelected="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="255"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="VIEW_ATTR"
    SQLType="VARCHAR">
    <RecalcCondition><![CDATA[true]]></RecalcCondition>
    <TransientExpression><![CDATA["http://gravtar.com/avatar/" + new BigInteger(1, java.security.MessageDigest.getInstance("MD5").digest(Email.getBytes("UTF-8"))).toString(16)]]></TransientExpression>
  </ViewAttribute>
  <ViewAttribute
    Name="DirectReports"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="java.lang.Integer"
    ColumnType="INTEGER"
    AliasName="VIEW_ATTR"
    SQLType="INTEGER"
    Expression="SELECT count(*) FROM EMPLOYEES dr WHERE dr.MANAGER_ID = Employees.EMPLOYEE_ID"/>
