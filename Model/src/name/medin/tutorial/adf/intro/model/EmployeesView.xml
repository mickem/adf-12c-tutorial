      <ViewCriteriaItem
        Name="ManagerId"
        ViewAttribute="ManagerId"
        Operator="ISBLANK"
        Conjunction="AND"
        GenerateIsNullClauseForBindVars="false"
        Required="Optional"/>
    </ViewCriteriaRow>
  </ViewCriteria>
  <ViewCriteria
    Name="NoDirectReports"
    ViewObjectName="name.medin.tutorial.adf.intro.model.EmployeesView"
    Conjunction="AND"
