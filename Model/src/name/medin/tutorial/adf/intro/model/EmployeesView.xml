    Name="EmployeesView"
    ViewLink="name.medin.tutorial.adf.intro.model.EmpManagerFkLink"
    Type="oracle.jbo.RowIterator"
    IsUpdateable="false"/>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="name.medin.tutorial.adf.intro.model.ModelBundle"/>
  </ResourceBundle>
</ViewObject>
