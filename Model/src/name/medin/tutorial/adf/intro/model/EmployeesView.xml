      <SchemaBasedProperties>
        <FMT_FORMAT
          ResId="name.medin.tutorial.adf.intro.model.EmployeesView.HireDate_FMT_FORMAT"/>
        <FMT_FORMATTER
          ResId="name.medin.tutorial.adf.intro.model.EmployeesView.HireDate_FMT_FORMATTER"/>
      </SchemaBasedProperties>
    </Properties>
  </ViewAttribute>
  <ViewAttribute
    Name="JobId"
    IsNotNull="true"
    PrecisionRule="true"
    EntityAttrName="JobId"
    EntityUsage="Employees"
    AliasName="JOB_ID"
    LOVName="LOV_JobId">
    <Properties>
      <SchemaBasedProperties>
        <CONTROLTYPE
          Value="choice"/>
      </SchemaBasedProperties>
    </Properties>
  </ViewAttribute>
  <ViewAttribute
    Name="Salary"
    PrecisionRule="true"
    EntityAttrName="Salary"
    EntityUsage="Employees"
